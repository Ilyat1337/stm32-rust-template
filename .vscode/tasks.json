{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Cargo Build (debug)",
      "type": "process",
      "command": "cargo",
      "args": [
        "build"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "group": {
        "kind": "build",
      }
    },
    {
      "label": "Cargo Build (release)",
      "type": "process",
      "command": "cargo",
      "args": [
        "build",
        "--release"
      ],
      "problemMatcher": [
        "$rustc"
      ],
      "group": "build"
    },
    {
      "label": "Cargo Clean",
      "type": "process",
      "command": "cargo",
      "args": [
        "clean"
      ],
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Upload sketch",
      "type": "shell",
      "command": "openocd",
      "args": [
        "-f",
        "board/st_nucleo_f103rb.cfg",
        "-c",
        "\"program ./target/thumbv7m-none-eabi/release/program verify reset exit\""
      ],
      "problemMatcher": [],
      "group": "build",
      "dependsOn": [
        "Cargo Build (release)"
      ]
    }
  ]
}